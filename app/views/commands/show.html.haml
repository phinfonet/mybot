- model_class = Command
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_type) + ':'
  %br
  = @command._type
%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @command._id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @command.name
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @command.value

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), commands_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_command_path(@command), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), command_path(@command), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
